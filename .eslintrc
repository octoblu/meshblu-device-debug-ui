{
  "extends": "airbnb",
  "rules": {
    "arrow-body-style": 0,
    "func-names": 0,
    "no-multi-spaces": 0,
    "no-unused-expressions": 0,
    "prefer-arrow-callback": 0,
    "semi": [2, "never"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-no-bind": 0,
    "react/prefer-stateless-function": 0
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "mocha": true
  }
}
